<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">


        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/temperature_layout" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <fragment
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:name="com.luan.thermospy.android.fragments.RealtimeChartFragment"
                android:id="@+id/fragment_realtime"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:tag="realtime_graph"
                android:layout_weight="0.8"
                tools:layout="@layout/fragment_realtime_chart" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2">

                <include
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    layout="@layout/log_session_layout"
                    android:id="@+id/log_session_control"
                    android:layout_weight="0.5" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:id="@+id/server_control_container"
                    android:layout_weight="0.5"></FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
